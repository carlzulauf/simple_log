<div class="section" data-controller="namespaces">
  <nav class="card">
    <%# <p class="panel-heading">
      Create Namespace
    </p> %>
    <div class="card-content">
      <%= form_for(Namespace.new, html: { class: "container" }) do |f| %>

        <div class="field is-grouped">
          <p class="control is-expanded">
            <%= f.text_field :name, class: "input has-text-light has-background-dark", placeholder: "Name (optional)" %>
          </p>
          <p class="control">
            <%= f.submit class: "button is-info is-outlined" %>
          </p>
        </div>
      <% end %>
    </div>
  </nav>
</div>
