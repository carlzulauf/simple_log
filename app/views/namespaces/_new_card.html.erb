<div class="box">
  <%= form_for(Namespace.new, html: { class: "container" }) do |f| %>

    <div class="field">
      <p class="control">
        <%= f.text_field :name, class: "input", placeholder: "Name (optional)" %>
      </p>
    </div>

    <div class="field">
      <p class="control">
        <%= f.submit class: "button is-primary is-fullwidth" %>
      </p>
    </div>
  <% end %>
</div>
